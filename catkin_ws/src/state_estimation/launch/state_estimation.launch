<launch>
	<node
		name="XimuPublisher"
		type="XimuPublisher"
		pkg="state_estimation"
    respawn="true" respawn_delay="5"
	/>

	<node
		name="tf_broadcaster"
		type="tf_broadcaster"
		pkg="state_estimation"
	/>

	<node
		name="target_broadcaster"
		type="target_broadcaster"
		pkg="state_estimation"
	/>

	<node name="initialize_horizon" type="initialize_horizon" pkg="state_estimation">
    <param name="yaw_drift_tolerance" value="1" />  <!-- in rad/sec -->
  </node>

  <node name="depth" type="depth" pkg="state_estimation">
    <param name="offset" value="-92.6" />
    <param name="window" value="10" />
  </node>

  <node
    pkg="tf"
    type="static_transform_publisher"
    name="depth_static_broadcaster"
    args="0 0 0 0 0 0 depth_static_frame base_link 100"
  />

  <node name="state_publisher" type="state_publisher" pkg="state_estimation">
  </node>

  <node name="bin_detector" type="bin_detector" pkg="state_estimation" />
  <node name="lane_detector" type="lane_detector" pkg="state_estimation" />
</launch>
